<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dddddd"
    tools:context=".viewall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ba"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/blacbut"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:layout_height="match_parent">




            <TextView
                android:id="@+id/sel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/sett"
                android:layout_marginRight="15dp"
                />
        </LinearLayout>



    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <GridView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#dddddd"
            android:id="@+id/gridho"
            android:layout_width="fill_parent"
            android:numColumns="3"
            android:clickable="true"
            android:stretchMode="columnWidth"
            android:longClickable="true"
            android:verticalSpacing="6dp"
            android:gravity="center"
            android:horizontalSpacing="3dp"
            android:layout_height="fill_parent">

        </GridView>


                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:id="@+id/unhide"
                        app:fab_colorNormal="@color/pink"
                        app:fab_colorPressed="@color/pinkpressed"
                        app:fab_icon="@drawable/unhide"
                        android:visibility="invisible"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="100dp"
                        android:layout_alignParentBottom="true"
                        app:fab_size="normal"
                        app:fab_title="Unhide"
                        android:layout_height="wrap_content" />

                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:id="@+id/delete"
                        app:fab_colorNormal="@color/pink"
                        app:fab_colorPressed="@color/pinkpressed"
                        app:fab_icon="@drawable/def"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="100dp"
                        android:visibility="invisible"
                        android:layout_marginBottom="30dp"
                        android:layout_alignParentBottom="true"
                        app:fab_size="normal"
                        app:fab_title="Delete"
                        android:layout_height="wrap_content" />


</RelativeLayout>

    </LinearLayout>

</LinearLayout>